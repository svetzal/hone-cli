{
  "name": "hone",
  "version": "0.1.0",
  "description": "CLI tool that hones codebases through iterative quality improvement cycles using Claude agents",
  "license": "SEE LICENSE IN LICENSE",
  "module": "src/cli.ts",
  "type": "module",
  "private": true,
  "bin": {
    "hone": "./src/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --compile --outfile=hone",
    "build:all": "bun run build:macos-arm64 && bun run build:macos-x64 && bun run build:linux-x64 && bun run build:windows-x64",
    "build:macos-arm64": "bun build src/cli.ts --compile --target=bun-darwin-arm64 --outfile=dist/hone-darwin-arm64",
    "build:macos-x64": "bun build src/cli.ts --compile --target=bun-darwin-x64 --outfile=dist/hone-darwin-x64",
    "build:linux-x64": "bun build src/cli.ts --compile --target=bun-linux-x64 --outfile=dist/hone-linux-x64",
    "build:windows-x64": "bun build src/cli.ts --compile --target=bun-windows-x64 --outfile=dist/hone-windows-x64.exe",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
